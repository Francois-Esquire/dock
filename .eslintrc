{
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "jsx": true
  },
  "env": {
    "node": true,
    "browser": true
  },
  "plugins": ["babel", "react", "import", "jsx-a11y", "compat"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "all",
        "tabs": true
      }
    ],
    "indent": ["error", 2]
  }
}
